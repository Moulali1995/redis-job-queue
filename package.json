{
  "name": "redis-message-queue",
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config moleculer.config.ts services/**/*.service.ts",
    "start": "TS_NODE_PROJECT=tsconfig.production.json node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js dist/services",
    "cli": "pankod-cli add",
    "test": "jest --coverage --runInBand",
    "lint": "eslint -c .eslintrc.js --ext .ts {services,src,test}/**",
    "format": "eslint -c .eslintrc.js --ext .ts --fix {services,src,test}/**",
    "dc:up": "docker-compose up --build -d",
    "dc:down": "docker-compose down",
    "swagger": "swagger-jsdoc -d swagger/config.js -o swagger/swagger.json services/*.service.ts && node ./swagger/index.js"
  },
  "pankod": {
    "projectType": "moleculer"
  },
  "keywords": [
    "microservices",
    "moleculer",
    "typescript",
    "typeorm",
    "swagger",
    "eslint",
    "jest",
    "supertest"
  ],
  "author": "Pankod <info@pankod.com>",
  "devDependencies": {
    "@pankod/pankod-cli": "^0.2.3",
    "@types/jest": "^23.1.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^10.17.17",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^25.0.0",
    "jest-cli": "^25.0.0",
    "moleculer-repl": "^0.5.3",
    "prettier": "^1.17.1",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.0.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.42",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bull": "^3.12.1",
    "@types/connect-redis": "0.0.13",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.16",
    "@types/lodash": "^4.14.138",
    "@types/redis": "^2.8.14",
    "@types/uuid": "^3.4.6",
    "aws-sdk": "^2.814.0",
    "bcrypt": "^3.0.6",
    "bull": "^3.13.0",
    "class-transformer": "^0.2.3",
    "connect-redis": "^4.0.3",
    "cookie": "^0.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moleculer": "^0.13.0",
    "moleculer-decorators": "^1.0.21",
    "moleculer-web": "^0.8.0",
    "moment": "^2.24.0",
    "nats": "^1.3.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^3.2.9",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.3"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^@(Test)(.*)$": "<rootDir>/test/$2",
      "@Entities/Connection": "<rootDir>/test/Config/Connection",
      "^@([A-Z].*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts)"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/Config/mock.setup.ts",
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    }
  }
}
